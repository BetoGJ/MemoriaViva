<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_transparente"
        android:alpha="0.2"
        android:contentDescription="Logo de fundo" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:backgroundTint="#F0F0F0"
    android:backgroundTintMode="multiply">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título Principal -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/purple_500">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_media_play"
                    android:layout_marginEnd="16dp"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atividades Recreativas"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Seção 1: Jogos -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎮 Jogos"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnJogoMemoria"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="🧠 Jogo da Memória"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@color/purple_200" />

                <Button
                    android:id="@+id/btnQuizImagens"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="🖼️ Quiz de Imagens"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/purple_200" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Seção 2: Bem-estar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🧘 Bem-estar"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_200"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnRespiracao"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="💨 Respiração Guiada"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@color/teal_200" />

                <Button
                    android:id="@+id/btnAlongamento"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="🤸 Alongamento Ilustrado"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/teal_200" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Seção 3: Rotina Divertida -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✨ Rotina Divertida"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnFraseDia"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="💬 Frase do Dia"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@color/purple_700" />

                <Button
                    android:id="@+id/btnAlbumMemorias"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="📸 Álbum de Memórias"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/purple_700" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
</FrameLayout>