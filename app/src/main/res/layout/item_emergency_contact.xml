<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16sp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Contato"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_contact_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+5511999999999"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- BOTÃƒO DE CHAMADA ADICIONADO AQUI -->
    <ImageButton
        android:id="@+id/button_call_contact"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Ligar"
        android:src="@drawable/ic_call" />

    <ImageButton
        android:id="@+id/button_edit_contact"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Editar"
        android:src="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/button_remove_contact"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remover"
        android:src="@drawable/ic_delete" />
</LinearLayout>