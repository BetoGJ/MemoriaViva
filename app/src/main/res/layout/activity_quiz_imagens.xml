<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnVoltarQuiz"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="←"
            android:textSize="20sp"
            android:backgroundTint="@color/purple_500"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🖼️ Quiz de Imagens"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pontuação: 0"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <ImageView
        android:id="@+id/imagemQuiz"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:background="@color/card_background"
        android:padding="16dp" />

    <TextView
        android:id="@+id/perguntaTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pergunta aqui"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnOpcao1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Opção 1"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/btnOpcao2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Opção 2"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/purple_200" />

    <Button
        android:id="@+id/btnOpcao3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Opção 3"
        android:textSize="18sp"
        android:backgroundTint="@color/purple_200" />

</LinearLayout>