<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#E3F2FD">

        <Button
            android:id="@+id/btnCuidadorMapa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="👨‍⚕️ Cuidador"
            android:textSize="14sp"
            android:backgroundTint="#2196F3"/>

        <Button
            android:id="@+id/btnPacienteMapa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="🧑‍🦳 Paciente"
            android:textSize="14sp"
            android:backgroundTint="#4CAF50"/>

    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/txtMapaInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🗺️ Mapa em Tempo Real\n📍 Vermelho: Paciente | 🔵 Azul: Cuidador | 🟢 Verde: Você"
        android:textAlignment="center"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#F5F5F5"/>

</LinearLayout>